root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{py,pyw}]
max_line_length = 120

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{GNUmakefile,[Mm]akefile,*.mk}]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
